<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#2196f3</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="android:contextPopupMenuStyle">@style/Widget.MaterialComponents.PopupMenu.ContextMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow</item>
        <!--
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        -->
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ExpandedCollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>
